<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>

<div id="banner">
	<%= image_tag("logo.png") %>
	<%= @page_title || "Pragmatic Bookshelf" %>
</div>

<div id="columns">
	<div id="side">
	<% if @cart %>
		<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
			<%= render @cart %>
		<% end %>
	<% end %>

		<ul>
			<li><a href="#">Home</a></li>
			<li><a href="#">Questions</a></li>
			<li><a href="#">News</a></li>
			<li><a href="#">Contact</a></li>
		</ul>
		<% time=Time.zone.now %>
		<p id="date">
		<span>Today is:</span><br/>
			<%= time.to_s(:long) %><br/>
		</p>
		<p id="shipping_date">
		<span>If you buy today we ship on:</span><br/>
			<%= (time + 3.days).strftime("%m/%d/%Y") %>
		</p>
	</div>
	<div id="main">
		<%= yield %>
	</div>
</div>

</body>
</html>
